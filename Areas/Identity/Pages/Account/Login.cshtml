@page
@model LoginModel
@{
    Layout = "~/Views/Shared/_Clean_Layout.cshtml";
    ViewData["Title"] = "Log in";
}
<div class="login-page">

    <form method="post" class="card p-5 w-25">
        <h3 class="card-title">Login</h3>
        <div class="form-group">
            <input asp-for="Input.UserName" class="form-control" placeholder="Username" />
            
        </div>
        <div class="form-group">
            <input asp-for="Input.Password" class="form-control"  placeholder="Password" />
            
        </div>
        <div class="form-group">
            <div class="checkbox">
                <label asp-for="Input.RememberMe">
                    <input asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
        </div>

        <div asp-validation-summary="All" class="validation-errors text-danger py-0"></div>
        
        <div class="form-group">
            <button type="submit" class="btn btn-outline-success btn-block">Log in</button>
        </div>
        <div class="form-group mb-0">
            <p class="m-0">
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
            </p>
        </div>
    </form>
    <div>
        <img id="login-img" src="~/images/login.svg" alt=""/>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
