@model JobFinder.Models.Post
@{
    ViewData["Title"] = "Create";
}


<form asp-action="Create">
    <h2>Create Post</h2>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <input class="form-control" type="text" asp-for="Title" placeholder="Post Title" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <textarea style="resize:none"
                    class="form-control"
                    asp-for="Content"
                    cols="50"
                    rows="5"
                    placeholder="Post Content.."
                    maxlength="1000"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <div class="form-group">
        <select asp-for="PostType" class="form-control" asp-items="@Html.GetEnumSelectList(typeof(PostType))"></select>
        <span asp-validation-for="PostType"></span>
    </div>
    <div class="form-group">
        <a asp-action="Index" class="btn btn-primary"><i class="fas fa-arrow-left"></i> Cancel</a>
        <button type="submit" class="btn btn-success"><i class="fas fa-check"></i> Create Post</button>
    </div>

</form>