@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right mr-5">
            <li class="nav-item">
                @*<a class="nav-link h5 m-0" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@@@UserManager.GetUserName(User)</a>*@
                <a class="nav-link h5 m-0" asp-action="Index" asp-controller="Profile">@@@UserManager.GetUserName(User)</a>
            </li>
            <li class="nav-item">
                <div class="dropdown nav-link">
                    <a
                       type="button"
                       id="dropdownMenuButton"
                       data-toggle="dropdown"
                       aria-haspopup="true"
                       aria-expanded="false"><i class="fas fa-caret-down"></i></a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item text-info bg-white font-weight-bold" asp-action="ListSaved" asp-controller="Posts">Saved Posts</a>
                        <a class="dropdown-item text-info bg-white font-weight-bold" asp-action="MyPosts" asp-controller="Posts">My Posts</a>
                        <div class="dropdown-divider"></div>
                        <button type="submit" class="dropdown-item bg-white font-weight-bold" style="color:#F05D5E"><i class="fas fa-sign-out-alt"></i> Logout</button>
                    </div>
                </div>
            </li>
        </ul>
    </form>
}
else    
{
    <ul class="nav navbar-nav navbar-right">
        <li class="nav-item"><a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a></li>
        <li class="nav-item"><a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a></li>
    </ul>
}
